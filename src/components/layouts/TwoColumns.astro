---

const {alignTop } = Astro.props;

const divClassName = alignTop? 'top-aligned' : '';
---
<div class = {divClassName}>
    <slot name = 'primary-data'></slot>
    <slot ></slot>
</div>


<style>
    div{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .top-aligned{
        align-items: flex-start;
    }

    div:first-child{
        margin-right: 1rem;
    }

    @media(max-width: 1120px){
        div{
            flex-direction: column;
        }
    }
</style>