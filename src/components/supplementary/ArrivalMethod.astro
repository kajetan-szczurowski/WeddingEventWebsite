---
import { Image } from "astro:assets";
const {imageSrc, imageAlt, label} = Astro.props;

---

<section>
    <header>
        <Image src = {imageSrc} alt = {imageAlt}></Image>
        <h2>{label}</h2>
    </header>
        <p>
            <slot></slot>
        </p>
</section>

<style>
    img, h2{
        display: inline;
    }

    header{
        display: flex;
        align-items: center;
    }

    img {
        margin-right: 1rem;
    }

    p {
        padding-left: 2rem;
    }

    section{
        /* margin-bottom: 5rem; */
    }

    @media(max-width: 1000px){
        section, header, p{
            width: 40vw;
        }
    }

    @media(max-width: 530px){
        p{
            width: 90vw;
        }

        section{
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90vw;
        }

        header{
            width: fit-content;
        }

        p{
            padding: 0;
        }

    }



</style>