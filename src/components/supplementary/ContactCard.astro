---
const {image, label, phoneNumber, imageAltText} =  Astro.props;
import Image from "astro/components/Image.astro";
---

<div class = 'wrapper'>
    <Image src = {image} alt = {imageAltText}/>

    <div class = 'text-info'>
        <div class = 'label'>{label}</div>
        <div class = 'phoneNumber'>{phoneNumber}</div>
    </div>
    
</div>

<style>
    img{
        width: 100px;
        height: 100px;
    }

    .wrapper{
        display: flex;
        align-items: center;
        width: 310px;
    }

    .label{
        font-size: 24px;
        font-weight: bold;
    }

    .phoneNumber{
        font-size: 18px;
        font-weight: bold;
    }

    @media(max-width: 350px){
        .label{
        font-size: 18px;
        font-weight: bold;
    }

    .phoneNumber{
        font-size: 12px;
        font-weight: bold;
    }

    img{
        width: 50px;
        height: 50px;
    }

    .wrapper{
        width: 90%;
    }

    }
</style>
