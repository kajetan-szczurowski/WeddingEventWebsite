---
const { pages } = Astro.props;

---
<navbar>
    <ul>
  
      {pages.map((page: {url:string, label:string}) => ( 
        <a  href={`/${page.url}`}>
            <span>{page.label}</span>
            <hr/>
        </a>
      ))}
    
    <hr/>
    </ul>
  
</navbar>

<style>

    ul{
        background-color: #9a0303;
        color: white;
        list-style-type: none;
        padding: 0;
    }


    a {
        padding-top: 3rem;
        display: block;
        text-decoration: none;
        color: white;
        font-size: 28px;
        text-transform: uppercase;
        height: 100%;
    }

    span{

        padding-left: 1rem;
    }

    li:first-child{
        padding-top: 3rem;
    }

    a:hover{
        background-color: black;
        cursor: pointer;
    }

    a:active{
        background-color: black;
    }

    hr{
        margin: 0;
    }

</style>

